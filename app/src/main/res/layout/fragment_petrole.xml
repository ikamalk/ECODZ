<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"

    android:scrollIndicators="top"
    tools:context="com.example.root.ecodz.Petrole">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants"

        >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="300dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="1"
                            android:background="@drawable/imageoil" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/stroke"
                            android:orientation="horizontal"
                            >

                                <TextView
                                    android:id="@+id/lundi"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:lineSpacingExtra="4sp"
                                    android:text="Lundi"
                                    android:textColor="@color/noir"
                                    android:textSize="12sp" />
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@color/gris"></View>

                                <TextView
                                    android:id="@+id/mardi"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:lineSpacingExtra="4sp"
                                    android:text="Mardi"

                                    android:textColor="@color/noir"
                                    android:textSize="12sp" />
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/gris"></View>

                                <TextView
                                    android:id="@+id/mercredi"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:lineSpacingExtra="4sp"
                                    android:text="Mercredi"

                                    android:textColor="@color/noir"
                                    android:textSize="11sp" />
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/gris"></View>

                                <TextView
                                    android:id="@+id/jeudi"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:lineSpacingExtra="4sp"
                                    android:text="Jeudi"

                                    android:textColor="@color/noir"
                                    android:textSize="12sp" />
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/gris"></View>

                                <TextView
                                    android:id="@+id/vendredi"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:lineSpacingExtra="4sp"
                                    android:text="Vendredi"

                                    android:textColor="@color/noir"
                                    android:textSize="11sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/principal_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="Cours du Brent en direct"
                                            android:textColor="@color/white"
                                            android:textSize="13sp"
                                            android:textStyle="bold" />

                                        <RelativeLayout
                                            android:id="@+id/view_color"
                                            android:layout_width="180dp"
                                            android:layout_height="60dp">

                                                <TextView
                                                    android:id="@+id/prix_baril"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_alignParentTop="true"
                                                    android:layout_centerHorizontal="true"
                                                    android:gravity="center"
                                                    android:textColor="@color/white"
                                                    android:textSize="40sp"
                                                    android:textStyle="bold" />


                                        </RelativeLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                        <RelativeLayout
                                            android:layout_width="70dp"
                                            android:layout_height="15dp"
                                            android:layout_gravity="right"
                                            android:background="@color/white">

                                                <TextView
                                                    android:id="@+id/taux"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:gravity="center"
                                                    android:textColor="@color/V"
                                                    android:textSize="10sp" />

                                        </RelativeLayout>
                                </LinearLayout>

                        </LinearLayout>


                </RelativeLayout>

                <WebView
                    android:id="@+id/webview_petrole"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_weight="1"
                    ></WebView>


        </LinearLayout>

</ScrollView>
